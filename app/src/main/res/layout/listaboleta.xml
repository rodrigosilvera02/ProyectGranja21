<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Numero Boleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtNumeroBol" />

    <TextView
        android:text="Fecha Boleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_marginTop="12dp"
        android:id="@+id/textView38" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView38"
        android:layout_alignStart="@+id/txtNumeroBol"
        android:id="@+id/txtFechaBol" />

    <TextView
        android:text="Precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:id="@+id/textView40"
        android:layout_alignBaseline="@+id/txtNumeroBol"
        android:layout_alignBottom="@+id/txtNumeroBol"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtFechaBol"
        android:layout_alignStart="@+id/textView40"
        android:id="@+id/txtPrecio" />

    <TextView
        android:text="Estado del Pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginTop="17dp"
        android:id="@+id/textView44" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView44"
        android:layout_alignStart="@+id/txtFechaBol"
        android:id="@+id/txtEstado" />

    <Button
        android:text="Ver Producto\n Boleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerProducto"
        android:layout_below="@+id/txtFechaBol"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
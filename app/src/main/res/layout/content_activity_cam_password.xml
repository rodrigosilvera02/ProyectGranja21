<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rodrigo.proyectgranja.Main2Activity"
    tools:showIn="@layout/app_bar_cambpassword">

    <TextView
        android:text="Contraseña Vieja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contraseñavieja"
        android:layout_x="15dp"
        android:layout_y="122dp" />

    <TextView
        android:text="Contraseña Nueva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="173dp"
        android:id="@+id/textView28" />
    <TextView
        android:text="Repetir Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="223dp"
        android:id="@+id/textView29" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_x="149dp"
        android:layout_y="198dp"
        android:id="@+id/edtPassnuevo1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_x="149dp"
        android:layout_y="148dp"
        android:id="@+id/edtPassNuevo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_x="149dp"
        android:layout_y="98dp"
        android:id="@+id/edtPassviejo" />

    <TextView
        android:text="Cambiar Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:layout_x="24dp"
        android:layout_y="31dp"
        android:id="@+id/textView30" />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="135dp"
        android:layout_y="302dp"
        android:id="@+id/btnAceptar" />

    <TextView
        android:text="Las Contraseñas No Coinciden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="275dp"
        android:id="@+id/txtERRORPASS"
        android:visibility="invisible"/>

    <TextView
        android:text="La Contaseña Vieja No Es Correcta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="142dp"
        android:layout_y="85dp"
        android:id="@+id/txtERRORPASSV"
        android:visibility="invisible"/>

</AbsoluteLayout>

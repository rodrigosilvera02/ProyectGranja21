<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/imageView4"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:adjustViewBounds="true" />

    <TextView
        android:text="txtNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginStart="79dp"
        android:id="@+id/txtNombreProducto" />

    <TextView
        android:text="txtNombreGranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTipoProducto"
        android:layout_alignStart="@+id/txtNombreProducto"
        android:layout_marginTop="13dp"
        android:id="@+id/txtNombreGranja" />

    <TextView
        android:text="txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrecio"
        android:layout_alignBaseline="@+id/txtNombreGranja"
        android:layout_alignBottom="@+id/txtNombreGranja"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="txtCalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCalidad"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="txtTipoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTipoProducto"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtPrecio" />
</RelativeLayout>
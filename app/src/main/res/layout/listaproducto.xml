<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/imageView4"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxHeight="70dp"
        android:maxWidth="90dp"
        android:adjustViewBounds="true" />

    <TextView
        android:text="txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrecio"
        android:layout_alignBaseline="@+id/txtNombreGranja"
        android:layout_alignBottom="@+id/txtNombreGranja"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="txtTipoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTipoProducto"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtPrecio" />

    <TextView
        android:text="txtNombreGranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/txtNombreGranja"
        android:layout_below="@+id/txtNombreProducto"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:text="txtCalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCalidad"
        android:layout_above="@+id/txtPrecio"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="Calidad Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_alignBaseline="@+id/txtCalidad"
        android:layout_alignBottom="@+id/txtCalidad"
        android:layout_alignStart="@+id/txtNombreProducto" />

    <TextView
        android:text="txtNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreProducto"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginTop="0dp"/>

</RelativeLayout>